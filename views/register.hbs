<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white min-h-screen flex items-center justify-center">

  <div class="w-full max-w-md p-8 bg-neutral-900 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-center">User Registration</h1>

    <form action="/register" method="POST" enctype="multipart/form-data" class="space-y-4">

      <!-- Full Name -->
      <div>
        <label class="block mb-1 text-sm">Full Name</label>
        <input type="text" name="fullName" required
          class="w-full p-2 bg-black border border-white rounded text-white">
      </div>

      <!-- Email -->
      <div>
        <label class="block mb-1 text-sm">Email Address</label>
        <input type="email" name="email" required
          class="w-full p-2 bg-black border border-white rounded text-white">
      </div>

      <!-- Course Track -->
      <div>
        <label class="block mb-1 text-sm">Course Track</label>
        <select name="course" required
          class="w-full p-2 bg-black border border-white rounded text-white">
          <option value="">Select a track</option>
          <option value="Web Dev">Web Dev</option>
          <option value="Data Science">Data Science</option>
          <option value="UX Design">UX Design</option>
        </select>
      </div>

      <!-- Profile Picture -->
      <div>
        <label class="block mb-1 text-sm">Profile Picture</label>
        <input type="file" name="profilePic" accept=".jpg,.jpeg,.png" required
          class="w-full p-2 bg-black border border-white rounded text-white">
      </div>

      <button type="submit"
        class="w-full bg-white text-black py-2 rounded font-semibold hover:bg-gray-300 transition">
        Register
      </button>

    </form>
  </div>

</body>
</html>